{{#each postagens}}
<div class="card mt-4" style="background-color: #F8F9FA;">
    <div class="card-body mt-2">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagens/{{keyword}}"><button class="btn btn-primary btn-lg">Leia mais</button></a>
        <hr>
        <small>Categoria: {{categoria.nome}}</small>
        <small>Data de publicação:{{data}}</small>
    </div>
</div>
<div class="mt-4">

</div>
{{else}}
    <h5>Nenhuma postagem recente</h5>
{{/each}}