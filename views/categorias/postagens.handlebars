<h1>{{categoria.nome}}</h1>

{{#each postagens}}
<div class="card mt-4" style="background-color: #F8F9FA";>
    <div class="card-body">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagens/{{keyword}}"><button class="btn btn-primary btn-lg">Leia mais</button></a>
        <hr>
        <small>Data de publicação: {{data}}</small>
    </div>
</div>
{{else}}
<div class="card mt-4">
    <div class="card-body">
        <h5>Nenhuma postagem</h5>
    </div>
</div>
{{/each}}
